<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="Subject:"/>

            <TextView
                android:id="@+id/tv_Subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/light_blue"
                android:paddingStart="8dp"
                android:textStyle="bold"
                android:text="Sample Subject"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Prelims:"/>

            <TextView
                android:id="@+id/tv_Prelims"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/light_blue"
                android:paddingStart="15dp"
                android:textStyle="bold"
                android:text="20.0"/>

            <TextView
                android:id="@+id/tv_Converted_Prelims"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/light_blue"
                android:paddingStart="15dp"
                android:textStyle="bold"
                android:text="(0 * 0.20)"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Midterm:"/>

            <TextView
                android:id="@+id/tv_Midterm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/light_blue"
                android:paddingStart="10dp"
                android:textStyle="bold"
                android:text="20.0"/>

            <TextView
                android:id="@+id/tv_Converted_Midterm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/light_blue"
                android:paddingStart="15dp"
                android:textStyle="bold"
                android:text="(0 * 0.20)"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Prefinals:"/>

            <TextView
                android:id="@+id/tv_Prefinals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/light_blue"
                android:paddingStart="8dp"
                android:textStyle="bold"
                android:text="20.0"/>

            <TextView
                android:id="@+id/tv_Converted_Prefinals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/light_blue"
                android:paddingStart="15dp"
                android:textStyle="bold"
                android:text="(0 * 0.20)"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Finals:"/>

            <TextView
                android:id="@+id/tv_Finals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/light_blue"
                android:paddingStart="10dp"
                android:textStyle="bold"
                android:text="20.0"/>

            <TextView
                android:id="@+id/tv_Converted_Finals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/light_blue"
                android:paddingStart="15dp"
                android:textStyle="bold"
                android:text="(0 * 0.40)"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Final Grade:"/>

            <TextView
                android:id="@+id/tv_FinalGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/light_blue"
                android:paddingStart="190dp"
                android:text="Finals"/>

            <TextView
                android:id="@+id/tv_Converted_FinalGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/light_blue"
                android:paddingStart="5dp"
                android:text="(0.00)"/>


        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>